{
  "compilerOptions": {
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsx": "preserve",
    "lib": ["es2020"],
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": false,
    "skipLibCheck": true,
    "stripInternal": true,
    "noImplicitAny": false
  },
  "include": [
    "./scripts", "./test", "./typechain", "./src", "./tasks"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "types": [
    "mocha",
    "node",
    "chai"
  ]
}
